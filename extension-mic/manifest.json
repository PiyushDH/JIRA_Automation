{
  "manifest_version": 3,
  "name": "Audio Transcription Extension",
  "version": "1.0",
  "description": "Record audio and transcribe using fal.ai Whisper API",
  "permissions": [
    "activeTab",
    "storage",
    "microphone",
    "tabs"
  ],
  "host_permissions": [
    "https://fal.run/*",
    "https://queue.fal.run/*",
    "https://rest.alpha.fal.ai/*",
    "https://storage.googleapis.com/*",
    "https://*.n8n.cloud/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Audio Transcription"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 